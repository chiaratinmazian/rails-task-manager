<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed == true  %>
    <input type="checkbox" checked>
    <label for="checkbox">This is completed</label>
  <% else %>
    <input type="checkbox">
    <label for="checkbox">This is not completed</label>
  <% end %>

<%= link_to 'Back to my list', tasks_path %>
<%= link_to 'Edit my task', edit_path %>
